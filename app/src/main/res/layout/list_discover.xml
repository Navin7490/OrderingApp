<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDiscoverItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/app_bg_blue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:paddingStart="@dimen/inner_start_end_margin"
        android:paddingEnd="@dimen/inner_start_end_margin"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/radioButtonListDisNameTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Near By"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/app_text_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />â€‹
            <ImageView
                android:id="@+id/Im_Discover"
                android:src="@drawable/location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/radioButtonListDisNameTag"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/app_bg_gray" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
