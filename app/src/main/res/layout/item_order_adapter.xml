<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.constraintlayout.widget.ConstraintLayout
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       android:layout_marginTop="20dp"
       android:padding="5dp"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/tvOrderItemName"
           app:layout_constraintTop_toTopOf="parent"
           android:text="Special Tea"
           android:textSize="15sp"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginEnd="8dp"
           android:fontFamily="@font/poppins_medium"
           app:layout_constraintEnd_toStartOf="@+id/tvQTY"
           android:textColor="@color/app_text_black"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <TextView
           android:id="@+id/tvQTY"
           android:textSize="14sp"
           app:layout_constraintTop_toTopOf="parent"
           android:textColor="@color/app_bg_blue"
           android:fontFamily="@font/poppins_bold"
           android:layout_marginStart="8dp"
           app:layout_constraintStart_toEndOf="@+id/tvOrderItemName"
           android:text="X 3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/tvOrderItemVA"
           app:layout_constraintTop_toBottomOf="@+id/tvOrderItemName"
           android:text="Special Tea"
           android:textSize="12sp"
           android:layout_marginEnd="20dp"
           android:visibility="gone"
           android:fontFamily="@font/poppins_regular"
           android:textColor="@color/app_text_gray"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/tvSpecialInstruction"
           app:layout_constraintTop_toBottomOf="@+id/tvOrderItemVA"
           android:text=""
           android:textSize="12sp"
           android:visibility="gone"
           android:layout_marginEnd="20dp"
           android:fontFamily="@font/poppins_regular"
           android:textColor="@color/app_text_gray"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/tvOrderItemPrice"
           app:layout_constraintTop_toTopOf="parent"
           android:text="$678"
           android:textColor="@color/app_text_black"
           android:fontFamily="@font/poppins_regular"
           android:textSize="15sp"
           app:layout_constraintEnd_toEndOf="parent"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <TextView
           app:layout_constraintTop_toBottomOf="@+id/tvSpecialInstruction"
           android:background="@drawable/drawable_divider"
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="1dp"/>
   </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>