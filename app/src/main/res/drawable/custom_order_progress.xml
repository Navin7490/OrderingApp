<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <corners android:radius="20dp"/>
            <gradient
                android:gradientRadius="20dp"
                android:endColor="@color/app_bg_gray"
                android:startColor="@color/app_bg_blue"
                android:centerColor="@color/app_bg_blue"
                android:useLevel="true"/>
        </shape>
    </item>
    <item>
        <clip>
            <shape>
                <corners android:radius="20dp" />
                <gradient
                    android:endColor="@color/app_bg_blue"
                    android:centerColor="@color/app_bg_blue"
                    android:startColor="@color/app_bg_gray"
                    android:useLevel="true"/>
            </shape>
        </clip>
    </item>

</layer-list>