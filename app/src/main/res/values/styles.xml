<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme.MaterialComponents.DayNight.NoActionBar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_bg_blue</item>
        <item name="colorOnPrimary">@color/app_text_white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_text_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">@color/app_text_white</item>
        <item name="colorOnSurface">@color/app_bg_blue</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/anim_slideup</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>
     <!--title bar -->
    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    
<!--    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">-->
<!--        <item name="colorPrimary">@color/app_bg_drak_blue</item>-->
<!--        <item name="hintTextColor">@color/app_text_black</item>-->
<!--    </style>-->


    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorOnSurface">@color/textfield_box</item>
        <item name="boxStrokeErrorColor">@color/app_error</item>
        <item name="hintTextColor">@color/app_bg_blue</item>
        <item name="android:textColorHint">@color/textfield_normal</item>
        <item name="android:textColor">@color/app_bg_blue</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="NSTButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>




    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorOnSurface">@color/app_bg_blue</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/app_bg_blue</item>
        <item name="colorSecondary">@color/app_bg_blue</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleTheme</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyTheme</item>
    </style>
    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorOnSurface">@color/app_bg_blue</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/app_bg_blue</item>
        <item name="colorSecondary">@color/app_bg_blue</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AlertDialogThemeProfileImage" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorOnSurface">@color/app_bg_blue</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/app_bg_blue</item>
        <item name="colorSecondary">@color/app_bg_blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyTheme</item>
    </style>

    <style name="AlertDialogBodyTheme" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/app_bg_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>




    <style name="AlertDialogTitleTheme" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_bg_blue</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="AlertDialogMessageTheme" parent="@style/AlertDialogBodyTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/app_bg_black</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/app_text_white</item>
        <item name="colorOnSurface">@color/app_bg_blue</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>


    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>


    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="CircleImageView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="roundCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="colorPrimary">@color/app_bg_blue</item>
        <item name="colorAccent">@color/app_bg_blue</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="behavior_peekHeight">5000dp</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>
    </style>
    <style name="SpinnerTheme">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/app_text_black</item>
    </style>
    <style name="CustomCheckbox02" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>